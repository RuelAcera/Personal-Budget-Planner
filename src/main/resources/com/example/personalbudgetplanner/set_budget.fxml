<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #f0f4f8, #d9e2ec);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personalbudgetplanner.SetBudgetController">

    <!-- Top bar with title and back button -->
    <top>
        <HBox prefHeight="0.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #2b6cb0; -fx-padding: 20;">
            <Label prefHeight="0.0" prefWidth="174.0" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Set Monthly Budget" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" onAction="#onBackClicked" style="-fx-background-color: white; -fx-text-fill: #2b6cb0; -fx-font-weight: bold; -fx-background-radius: 5;" text="Back" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #2a4365;" text="Select Month:" />
            <ComboBox fx:id="monthComboBox" prefWidth="300" />

            <Label style="-fx-font-size: 16px; -fx-text-fill: #2a4365; -fx-font-weight: bold;" text="Enter your monthly budget amount:" />
            <TextField fx:id="amountField" prefWidth="300" promptText="Budget Amount" />

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveBudgetButton" onAction="#onAddOrUpdateBudget" prefWidth="120" style="-fx-background-color: #3182ce; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Save Budget" />

                <Button fx:id="deleteBudgetButton" onAction="#onDeleteBudget" prefWidth="120" style="-fx-background-color: #e53e3e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Delete Budget" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
