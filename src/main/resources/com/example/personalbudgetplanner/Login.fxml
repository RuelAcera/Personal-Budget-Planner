<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #e2e8f0, #cbd5e0);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personalbudgetplanner.LoginController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <VBox alignment="CENTER" prefHeight="466.0" prefWidth="381.0" spacing="20" style="-fx-background-color: white; -fx-background-radius: 16; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);">

        <Label style="-fx-font-size: 28px; -fx-text-fill: #2b6cb0; -fx-font-weight: bold;" text="Welcome Back" />

        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 10; -fx-border-color: #cbd5e0; -fx-border-radius: 10; -fx-padding: 10;" />

        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 10; -fx-border-color: #cbd5e0; -fx-border-radius: 10; -fx-padding: 10;" />

        <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefWidth="180" style="-fx-background-color: #2b6cb0; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10;" text="Login" />

        <HBox alignment="CENTER" spacing="5">
            <Label style="-fx-text-fill: #4a5568;" text="Don't have an account?" />
            <Button onAction="#onSignUpClick" style="-fx-background-color: transparent; -fx-text-fill: #2b6cb0; -fx-underline: true; -fx-font-weight: bold;" text="Sign up" />
        </HBox>
    </VBox>

</VBox>
